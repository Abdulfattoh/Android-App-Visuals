<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:text="Qaysi dasturlash tili siz uchun eng yaxshisi ?"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/java"
        android:layout_below="@+id/title"
        android:layout_marginTop="40dp"
        android:layout_alignStart="@+id/natija"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Java" />

    <CheckBox
        android:id="@+id/php"
        android:layout_below="@+id/java"
        android:layout_alignStart="@+id/java"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="PHP" />

    <CheckBox
        android:id="@+id/python"
        android:layout_alignStart="@+id/java"
        android:layout_below="@+id/php"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Python" />

    <Button
        android:text="Natija"
        android:id="@+id/natija"
        android:layout_below="@+id/python"
        android:layout_marginStart="150dp"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/result"
        android:textSize="16sp"
        android:layout_below="@+id/natija"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>